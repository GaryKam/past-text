<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="io.github.garykam.pasttext.ui.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/action_listFragment_to_createFragment"
            app:destination="@id/createFragment" />
    </fragment>

    <fragment
        android:id="@+id/createFragment"
        android:name="io.github.garykam.pasttext.ui.CreateFragment"
        android:label="CreateFragment"
        tools:layout="@layout/fragment_create" >

        <action
            android:id="@+id/action_createFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

</navigation>